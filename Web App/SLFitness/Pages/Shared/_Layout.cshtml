<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SLFitness</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/site.css">

</head>
<body>
    <header class="header">

        <a href="#" class="logo"> <span>SL</span>FIT </a>

        <div id="menu-btn" class="fas fa-bars"></div>

        <nav class="navbar">
            <a asp-page="/Index">home</a>
            <a asp-page="/Index">about</a>
            <a asp-page="">membership</a> <!-- TODOc redirection content page -->
            <a asp-page="">products</a> <!-- TODO redirection page do display products from database-->
            <a asp-page="">trainers</a> <!-- TODO redirection page trainers to dsiplay trainers and schedule appointments prob-->
            @if (User.IsInRole("COACH"))
            {
                <a asp-page="#">view users</a>
            }
            <a asp-page="/Diets">diets</a>
            @if (User.Claims == null)
            {
                <a asp-page="/SignIn">sign in</a>
                <a asp-page="/Register">sign Up</a>
            }
            @if(User.Claims != null)
            {
                <a asp-page="/SignIn">log out</a>
            }

        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - SLFitness - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
