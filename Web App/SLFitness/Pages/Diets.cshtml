@page
@model SLFitness.Pages.DietsModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SLFIT</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!--    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" /> -->

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/site.css">

</head>
<body>  

    <section class="features" id="features" style="margin-top: 10px">

    <h1 class="heading"> <span>Diets</span> </h1>

    <div class="box-container">

        @foreach(var diet in Model.diets)
    {
        var base64 = Convert.ToBase64String(diet.Image);
        var imgSource = String.Format("data:image/jpg;base64,{0}", base64);

        <div class="box">
            <div class="image">
               <img src="@imgSource" class="featured-diet-image">
            </div>
            <div class="content">
                <p class="title">@diet.Name</p>
                <p class="description">@diet.Description</p>
            </div>
        </div>
    }
       
    </div>

</section>
    
</body>
