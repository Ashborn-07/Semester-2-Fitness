@page
@model SLFitness.Pages.Shared.LogInModel
@{
}
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SLFIT</title>

    <!-- font awesome cdn link  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<!--    <link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" /> -->

    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/Register.css">

</head>
<body>

<form method="post" style="border:1px solid #ccc">
  <div class="container">
    <h1>@Model.PageTitle</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

    <label asp-for="UserSignIn.Username"><b>Username</b></label>
    <span asp-validation-for="UserSignIn.Username" style="color: red"></span>
    <input asp-for="UserSignIn.Username" placeholder="Enter Username" style="text-transform: none">

    <label asp-for="UserSignIn.Password"><b>Password</b></label>
    <span asp-validation-for="UserSignIn.Password" style="color: red"></span>
    <input asp-for="UserSignIn.Password" placeholder="Enter Password" style="text-transform: none">
    
    
    <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

    <div class="clearfix">
      <button type="submit" class="signupbtn">Sign In</button>
      <button type="reset" class="cancelbtn" onclick="showHome()">Cancel</button>
    </div>
  </div>
</form>

</body>

