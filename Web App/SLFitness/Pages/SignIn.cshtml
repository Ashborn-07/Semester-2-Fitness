@page
@model SLFitness.Pages.Shared.LogInModel
@{
    ViewData["Title"] = "Sign In page";
}
@*<head>
    <!-- custom css file link  -->
    <link rel="stylesheet" href="~/css/register.css">
</head>*@


<form method="post" style="border:1px solid #ccc">
  <div class="center-signin">
    <h1>@Model.PageTitle</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

    <label asp-for="signIn.Username"><b>Username</b></label>
    <span asp-validation-for="signIn.Username" style="color: red"></span>
    <input asp-for="signIn.Username" placeholder="Enter Username" style="text-transform: none">

    <label asp-for="signIn.Password"><b>Password</b></label>
    <span asp-validation-for="signIn.Password" style="color: red"></span>
    <input asp-for="signIn.Password" placeholder="Enter Password" style="text-transform: none" type="password">
    <!--Create a pop up for incorrect password or username-->
    
    <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Priv+acy</a>.</p>

    <div class="clearfix">
      <button type="submit" class="signupbtn">Sign In</button>
      <button type="reset" class="cancelbtn" onclick="showHome()">Cancel</button>
    </div>
  </div>
</form>


